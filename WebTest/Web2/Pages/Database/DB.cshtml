@page
@model Web2.Pages.DBModel

@{
    ViewData["Title"] = "База данных";
}

<head>
    <link rel="stylesheet" href="~/css/Block.css" asp-append-version="true" />
</head>

<body>

    <div id="load-scr" class="loader2">
        <div id="page-loader" class="loader">
            <div class="inner one"></div>
            <div class="inner two"></div>
            <div class="inner three"></div>
        </div>
    </div>

    <div  class="text-center">
    <div class="mr-auto">
        <div class="page-context-header">
            <div class="page-header-headings">
            <h1>Интерфейс</h1>
            </div>
        </div>
    <hr align="center" size="5" />
    </div>           
</div>
            <div class="text-center">
                <label class="form-label">Выберите таблицу</label>

                    <div class="post-wrap">
                        <div class="post-item">
                            <div class="post-item-wrap">
                    <a href="/Database/Patients/Patients" class="post-link">
                                    <h3 class="post-title">Архив пациентов</h3>
                                    <p class="post-content"></p>
                                </a>
                            </div>
                        </div>

                        <div class="post-item">
                            <div class="post-item-wrap">
                    <a href="/Database/Analyzes/Analyzes" class="post-link">
                                    <h3 class="post-title">Анализы</h3>
                                    <p class="post-content"></p>
                                </a>
                            </div>
                        </div>

                        <div class="post-item">
                            <div class="post-item-wrap">
                    <a href="/Database/Examinations/Examinations" class="post-link">
                                    <h3 class="post-title">Результаты диспансеризации</h3>
                                    <p class="post-content"></p>
                                </a>
                            </div>
                        </div>
        </div>

        <form method="get" action="~/Database.xlsx">
                <button type="submit" class="g-button file" id="btnExport" value="Шаблон" >
                    <i class="fa fa-download">
                    <span>Шаблон</span>
                    </i>
                </button>
        </form>
     </div>

    @section scripts{
        <script src="~/scripts/loading.js"></script>

        <script>
                var links = document.querySelectorAll('.file');
                // Вешаем обработчик "click" на все элементы с классом file
                for (var i = 0; i < links.length; i++) {
                    links[i].addEventListener('click', function (e) {
                        // Отменяем событие (преход по ссылке или submit) если "Отмена"
                        if (!confirm('Продолжить скачивание?')) {
                            e.preventDefault();
                        }
                    }, false);
                }
        </script>
    }

</body>